groups:
  - name: low-memory
    rules:
    - alert: 5GBLowMemory
      annotations:
        description: "Low memory alert specific to robot-2"
        summary: "Robot {{ $labels.instance }} has less than 5 GB of memory free."
      expr: (node_memory_MemFree_bytes{device_instance="%%juju_device_uuid%%"})/1e9 < 5
      for: 5m
      labels:
        severity: critical
